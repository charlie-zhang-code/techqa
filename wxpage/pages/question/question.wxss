/* pages/question/question.wxss */
.container {
    padding: 15px;
    padding-bottom: 100px;
    background-color: #f9f5f5; /* 浅红色背景 */
  }
  
  .mbutton {
    width: 120px !important;
    color: white;
    border-radius: 25px;
  }
  
  .mbutton1 {
    width: 60px !important;
    background: #f0c0c0;
    color: #900000;
    border-radius: 15px;
  }
  
  .question-section {
    background: #fff;
    padding: 18px;
    border-radius: 12px;
    margin-bottom: 20px;
    box-shadow: 0 3px 10px rgba(192, 0, 0, 0.08);
    border: 1px solid #f0e0e0;
  }
  
  .question-title {
    font-size: 19px;
    font-weight: bold;
    margin-bottom: 12px;
    color: #222;
    line-height: 1.4;
  }
  
  .question-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
    font-size: 13px;
    color: #a00000;
  }
  
  .author-info {
    display: flex;
    align-items: center;
  }
  
  .avatar {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    margin-right: 10px;
    border: 1px solid #f0c0c0;
  }
  
  .username {
    margin-right: 12px;
    color: #900000;
    font-weight: 500;
  }
  
  .meta-info text {
    margin-left: 12px;
    display: flex;
    align-items: center;
  }
  
  .meta-info icon {
    margin-right: 3px;
  }
  
  .question-content {
    font-size: 15px;
    line-height: 1.8;
    margin-bottom: 15px;
    color: #333;
  }
  
  .question-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }
  
  .tag {
    padding: 4px 12px;
    background: linear-gradient(135deg, #f8e0e0, #f0c0c0);
    border-radius: 15px;
    font-size: 12px;
    color: #900000;
    border: 1px solid #e0a0a0;
  }
  
  .tabs {
    display: flex;
    border-bottom: 1px solid #e0c7c7;
    margin-bottom: 20px;
    position: relative;
  }
  
  .tab {
    flex: 1;
    text-align: center;
    padding: 12px 0;
    font-size: 15px;
    color: #666;
    position: relative;
  }
  
  .tab.active {
    color: #C00000;
    font-weight: bold;
  }
  
  .tab.active::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 25%;
    width: 50%;
    height: 3px;
    background: #C00000;
    border-radius: 3px 3px 0 0;
  }
  
  .content-section {
    margin-bottom: 200px;
  }
  
  .answer-item {
    background: #fff;
    padding: 18px;
    border-radius: 12px;
    margin-bottom: 15px;
    box-shadow: 0 3px 10px rgba(192, 0, 0, 0.05);
    border: 1px solid #f0e0e0;
    transition: transform 0.3s;
  }
  
  .answer-item:active {
    transform: translateY(2px);
  }
  
  .answer-item.accepted {
    border-left: 4px solid #C00000;
    background: #fff9f9;
  }
  
  .answer-header {
    display: flex;
    align-items: center;
    margin-bottom: 12px;
  }
  
  .answer-content {
    font-size: 15px;
    line-height: 1.8;
    margin-bottom: 12px;
    color: #333;
  }
  
  .answer-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .vote-buttons {
    display: flex;
    gap: 12px;
  }
  
  .vote-btn {
    font-size: 13px;
    padding: 0 12px;
    height: 28px;
    line-height: 28px;
    border-radius: 14px;
    background: #f8e0e0;
    color: #900000;
    border: none;
  }
  
  .vote-btn.up.active {
    background: linear-gradient(to bottom, #f0f0ff, #e0e0ff);
    color: #4051b5;
  }
  
  .vote-btn.down.active {
    background: linear-gradient(to bottom, #ffe0e0, #ffc0c0);
    color: #d00000;
  }
  
  .accept-btn {
    font-size: 13px;
    padding: 0 15px;
    height: 28px;
    line-height: 28px;
    border-radius: 14px;
    background: #f8e0e0;
    color: #900000;
    border: none;
  }
  
  .accept-btn.active {
    background: linear-gradient(to right, #C00000, #e00000);
    color: white;
  }
  
  .comment-item {
    display: flex;
    background: #fff;
    padding: 12px;
    border-radius: 8px;
    margin-bottom: 12px;
    box-shadow: 0 1px 5px rgba(192, 0, 0, 0.05);
  }
  
  .comment-content {
    flex: 1;
    margin-left: 10px;
  }
  
  .comment-header {
    display: flex;
    align-items: center;
    margin-bottom: 6px;
    font-size: 13px;
    color: #a00000;
  }
  
  .comment-header .username {
    margin-right: 10px;
    color: #C00000;
    font-weight: 500;
  }
  
  .comment-text {
    font-size: 14px;
    line-height: 1.6;
    color: #333;
  }
  
  .comment-actions {
    margin-top: 8px;
  }
  
  .reply-btn {
    font-size: 12px;
    color: #C00000;
    padding: 2px 6px;
    border-radius: 4px;
  }
  
  .replies {
    margin-top: 12px;
    padding-left: 12px;
    border-left: 1px dashed #e0c7c7;
  }
  
  .reply-item {
    display: flex;
    margin-bottom: 12px;
  }
  
  .reply-content {
    flex: 1;
    margin-left: 10px;
  }
  
  .reply-header {
    display: flex;
    align-items: center;
    margin-bottom: 6px;
    font-size: 13px;
    color: #a00000;
  }
  
  .reply-header .username {
    margin-right: 10px;
    color: #C00000;
    font-weight: 500;
  }
  
  .reply-text {
    font-size: 14px;
    line-height: 1.6;
    color: #333;
  }
  
  .input-section {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fff;
    padding: 15px;
    border-top: 1px solid #e0c7c7;
    box-shadow: 0 -3px 15px rgba(192, 0, 0, 0.1);
  }
  
  .input-section textarea {
    width: 100%;
    height: 90px;
    padding: 12px;
    border: 1px solid #e0c7c7;
    border-radius: 8px;
    font-size: 15px;
    margin-bottom: 12px;
    transition: border-color 0.3s;
  }
  
  .input-section textarea:focus {
    border-color: #C00000;
    outline: none;
  }
  
  .submit-btn {
    background: linear-gradient(to right, #C00000, #e00000);
    color: #fff;
    border: none;
    border-radius: 25px;
    font-size: 15px;
    height: 42px;
    line-height: 42px;
    box-shadow: 0 2px 6px rgba(192, 0, 0, 0.2);
  }
  
  .loading,
  .no-more,
  .empty {
    text-align: center;
    padding: 20px;
    color: #a00000;
    font-size: 15px;
  }
  
  .empty icon {
    display: block;
    font-size: 50px;
    margin-bottom: 15px;
    color: #e0a0a0;
  }