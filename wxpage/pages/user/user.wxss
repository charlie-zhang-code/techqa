/* pages/user/user.wxss */
.container {
    padding: 15px;
    background-color: #f9f5f5;
    height: 100vh;
}

.user-card {
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    margin-bottom: 15px;
    box-shadow: 0 2px 10px rgba(192, 0, 0, 0.08);
    border: 1px solid #ffe6e6;
}

.user-header {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
}

.avatar {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    margin-right: 15px;
    border: 2px solid #ffe6e6;
}

.user-info {
    display: flex;
    flex-direction: column;
}

.username {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 5px;
    color: #C00000;
}

.reputation {
    font-size: 14px;
    color: #8C0000;
}

.stats {
    display: flex;
    justify-content: space-around;
    padding: 15px 0;
    border-top: 1px solid #f0f0f0;
    border-bottom: 1px solid #f0f0f0;
    margin: 0 -20px;
    padding: 15px 20px;
}

.stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.stat-value {
    font-size: 18px;
    font-weight: bold;
    color: #C00000;
    margin-bottom: 5px;
}

.stat-label {
    font-size: 12px;
    color: #666;
}

.menu-list {
    background: #fff;
    border-radius: 10px;
    overflow: hidden;
    margin-bottom: 15px;
    box-shadow: 0 2px 10px rgba(192, 0, 0, 0.08);
    border: 1px solid #f0f0f0;
}

.menu-item {
    display: flex;
    align-items: center;
    padding: 16px 15px;
    border-bottom: 1px solid #f0f0f0;
    transition: background-color 0.3s;
}

.menu-item:active {
    background-color: #ffe6e6;
}

.menu-item:last-child {
    border-bottom: none;
}

.menu-icon {
    width: 22px;
    height: 22px;
    margin-right: 12px;
    color: #C00000;
}

.menu-item text {
    flex: 1;
    font-size: 15px;
    color: #333;
}

.menu-item .arrow {
    width: 16px;
    height: 16px;
    color: #999;
}

.logout-btn {
    margin-top: 20px;
    background: #fff;
    color: #C00000;
    border: 1px solid #ffcccc;
    font-weight: bold;
    border-radius: 8px;
}

.logout-btn:active {
    background: #ffe6e6;
}

.loading {
    text-align: center;
    padding: 20px;
    color: #999;
}

.version-info {
    text-align: center;
    margin-top: 30px;
    padding: 15px 0;
    color: #8C0000;
    font-size: 12px;
    border-top: 1px solid #f0f0f0;
}