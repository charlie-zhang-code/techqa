/* pages/user/user.wxss */

/* 整体容器 */
.container {
    padding-top: 30rpx;
    background-color: #f6f6f6;
    min-height: 100vh;
  }
  
  /* 用户信息卡片 */
  .user-card {
    background-color: #ffffff;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  }
  
  .user-header {
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
  }
  
  .avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    object-fit: cover;
    border: 4rpx solid #f0f0f0;
  }
  
  .user-info {
    margin-left: 24rpx;
  }
  
  .username {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 8rpx;
    display: block;
  }
  
  .reputation {
    font-size: 26rpx;
    color: #999;
  }
  
  /* 用户数据统计 */
  .stats {
    display: flex;
    justify-content: space-between;
    border-top: 1rpx solid #f0f0f0;
    padding-top: 30rpx;
  }
  
  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
  }
  
  .stat-value {
    font-size: 36rpx;
    font-weight: bold;
    color: #4a90e2;
    margin-bottom: 8rpx;
  }
  
  .stat-label {
    font-size: 26rpx;
    color: #666;
  }
  
  /* 功能列表 */
  .menu-list {
    background-color: #ffffff;
    border-radius: 16rpx;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
    margin-bottom: 30rpx;
  }
  
  .menu-item {
    display: flex;
    align-items: center;
    padding: 30rpx;
    position: relative;
  }
  
  .menu-item::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 30rpx;
    right: 30rpx;
    height: 1rpx;
    background-color: #f0f0f0;
  }
  
  .menu-item:last-child::after {
    display: none;
  }
  
  .menu-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
  }
  
  .menu-item text {
    flex: 1;
    font-size: 32rpx;
    color: #333;
  }
  
  .menu-item icon {
    color: #ccc;
  }
  
  /* 加载状态 */
  .loading {
    text-align: center;
    color: #999;
    font-size: 28rpx;
    padding: 30rpx 0;
  }
  
  /* 版本信息 */
  .version-info {
    text-align: center;
    font-size: 24rpx;
    color: #999;
    padding: 20rpx 0;
  }