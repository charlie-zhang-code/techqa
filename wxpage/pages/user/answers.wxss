/* pages/answer/answer.wxss */

/* 整体容器 */
.container {
    background-color: #f6f6f6;
    min-height: 100vh;
  }
  
  /* 回答项样式 */
  .answer-item {
    background-color: #ffffff;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  }
  
  .answer-content {
    font-size: 30rpx;
    color: #333;
    line-height: 1.6;
    margin-bottom: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
  }
  
  .answer-meta {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    color: #999;
    margin-bottom: 16rpx;
  }
  
  .answer-meta text {
    margin-right: 20rpx;
  }
  
  .accepted {
    color: #4a90e2;
    font-weight: bold;
    margin-right: 20rpx;
    position: relative;
    padding-left: 30rpx;
  }
  
  .accepted::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 20rpx;
    height: 20rpx;
    background-color: #4a90e2;
    border-radius: 50%;
    margin-right: 8rpx;
  }
  
  .question-link {
    font-size: 28rpx;
    color: #4a90e2;
    text-align: right;
  }
  
  /* 加载状态 */
  .loading {
    text-align: center;
    color: #999;
    font-size: 28rpx;
    padding: 30rpx 0;
  }
  
  /* 没有更多数据提示 */
  .no-more {
    text-align: center;
    color: #ccc;
    font-size: 26rpx;
    padding: 30rpx 0;
  }
  
  /* 空状态 */
  .empty {
    text-align: center;
    color: #999;
    font-size: 30rpx;
    padding: 100rpx 0;
  }