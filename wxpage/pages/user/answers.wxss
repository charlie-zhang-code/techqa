/* pages/user/answers.wxss */
.container {
    padding: 15px;
    min-height: 100vh;
    background-color: #f9f5f5;
}

.answer-item {
    background: #fff;
    padding: 16px;
    border-radius: 10px;
    margin-bottom: 12px;
    box-shadow: 0 2px 8px rgba(192, 0, 0, 0.05);
    border: 1px solid #f0f0f0;
    transition: transform 0.2s;
}

.answer-item:active {
    transform: scale(0.98);
}

.answer-content {
    font-size: 15px;
    margin-bottom: 12px;
    color: #333;
    line-height: 1.6;
    border-left: 3px solid #ffe6e6;
    padding-left: 10px;
}

.answer-meta {
    display: flex;
    font-size: 12px;
    color: #666;
    margin-bottom: 10px;
    padding-top: 8px;
    border-top: 1px dashed #f0f0f0;
}

.answer-meta text {
    margin-right: 15px;
    display: flex;
    align-items: center;
}

.answer-meta text::before {
    content: "";
    display: inline-block;
    width: 3px;
    height: 3px;
    background: #C00000;
    border-radius: 50%;
    margin-right: 6px;
}

.accepted {
    color: #52c41a;
    font-weight: bold;
    background: #f6ffed;
    padding: 0 5px;
    border-radius: 2px;
}

.question-link {
    font-size: 14px;
    color: #C00000;
    text-align: right;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.question-link::after {
    content: "â†’";
    margin-left: 5px;
    color: #C00000;
}

.loading,
.no-more,
.empty {
    text-align: center;
    padding: 30px 20px;
    color: #8C0000;
    font-size: 14px;
}

