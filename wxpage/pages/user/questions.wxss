/* pages/question/question.wxss */

/* 整体容器 */
.container {
    background-color: #f6f6f6;
    min-height: 100vh;
  }
  
  /* 问题项样式 */
  .question-item {
    background-color: #ffffff;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  }
  
  .question-title {
    font-size: 34rpx;
    font-weight: 500;
    color: #333;
    margin-bottom: 16rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  .question-meta {
    display: flex;
    font-size: 26rpx;
    color: #999;
    margin-bottom: 12rpx;
  }
  
  .question-meta text {
    margin-right: 30rpx;
  }
  
  .question-date {
    font-size: 24rpx;
    color: #ccc;
    text-align: right;
  }
  
  /* 加载状态 */
  .loading {
    text-align: center;
    color: #999;
    font-size: 28rpx;
    padding: 30rpx 0;
  }
  
  /* 没有更多数据提示 */
  .no-more {
    text-align: center;
    color: #ccc;
    font-size: 26rpx;
    padding: 30rpx 0;
  }
  
  /* 空状态 */
  .empty {
    text-align: center;
    color: #999;
    font-size: 30rpx;
    padding: 100rpx 0;
  }