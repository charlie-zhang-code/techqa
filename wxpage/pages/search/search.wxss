/* pages/search/search.wxss */

/* 整体容器 */
.container {
    background-color: #f6f6f6;
    min-height: 100vh;
  }
  
  /* 搜索栏样式 */
  .search-bar {
    display: flex;
    align-items: center;
    background-color: #ffffff;
    border-radius: 30rpx;
    padding: 10rpx 20rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  }
  
  .search-bar icon {
    margin-right: 10rpx;
  }
  
  .search-bar input {
    flex: 1;
    height: 60rpx;
    font-size: 28rpx;
    padding: 0 10rpx;
  }
  
  .search-btn {
    min-width: 100rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    background-color: #4a90e2;
    color: white;
    border-radius: 30rpx;
    margin-left: 10rpx;
    padding: 0 20rpx;
  }
  
  /* 选项卡样式 */
  .tabs {
    display: flex;
    margin-bottom: 30rpx;
    background-color: #ffffff;
    border-radius: 10rpx;
    overflow: hidden;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  }
  
  .tab {
    flex: 1;
    text-align: center;
    padding: 20rpx 0;
    font-size: 30rpx;
    color: #666;
    position: relative;
  }
  
  .tab.active {
    color: #4a90e2;
    font-weight: bold;
  }
  
  .tab.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 25%;
    width: 50%;
    height: 4rpx;
    background-color: #4a90e2;
    border-radius: 2rpx;
  }
  
  /* 搜索结果区域 */
  .search-results {
    background-color: #ffffff;
    border-radius: 10rpx;
    padding: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  }
  
  /* 问题项样式 */
  .question-item {
    padding: 20rpx 0;
    border-bottom: 1rpx solid #eee;
  }
  
  .question-item:last-child {
    border-bottom: none;
  }
  
  .question-title {
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
    margin-bottom: 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  .question-meta {
    font-size: 24rpx;
    color: #999;
    margin-bottom: 10rpx;
  }
  
  .question-meta text {
    margin-right: 20rpx;
  }
  
  .question-tags {
    display: flex;
    flex-wrap: wrap;
  }
  
  .tag {
    font-size: 24rpx;
    color: #4a90e2;
    background-color: rgba(7, 193, 96, 0.1);
    padding: 4rpx 12rpx;
    border-radius: 6rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
  }
  
  /* 标签容器样式 */
  .tags-container {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 30rpx;
  }
  
  .tags-container .tag {
    font-size: 28rpx;
    padding: 10rpx 20rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
  }
  
  .tags-container .tag.active {
    background-color: #4a90e2;
    color: white;
  }
  
  .tags-container .count {
    font-size: 24rpx;
    margin-left: 6rpx;
    color: #999;
  }
  
  /* 区块标题 */
  .section-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin: 30rpx 0 20rpx;
  }
  
  /* 空状态提示 */
  .empty {
    text-align: center;
    color: #999;
    font-size: 28rpx;
    padding: 60rpx 0;
  }
  
  /* 加载状态 */
  .loading {
    text-align: center;
    color: #999;
    font-size: 28rpx;
    padding: 30rpx 0;
  }