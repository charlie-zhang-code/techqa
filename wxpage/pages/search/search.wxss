/* pages/search/search.wxss */
.container {
    padding: 15px;
    background-color: #f9f5f5; /* 浅红色调背景 */
    height: 100vh;
  }
  
  .search-container {
    margin-bottom: 20px;
    display: flex;
    gap: 10px;
    align-items: center;
  }
  
  .search-bar {
    flex: 1;
    display: flex;
    align-items: center;
    background: #fff;
    border-radius: 25px;
    padding: 10px 18px;
    box-shadow: 0 2px 8px rgba(192, 0, 0, 0.08);
    border: 1px solid #e0c7c7;
    transition: all 0.3s;
  }
  
  .search-bar:focus-within {
    box-shadow: 0 2px 12px rgba(192, 0, 0, 0.15);
    border-color: #C00000;
  }
  
  .search-bar icon {
    margin-right: 10px;
    color: #a00000;
  }
  
  .search-bar input {
    flex: 1;
    font-size: 15px;
    color: #333;
  }
  
  .search-btn {
    min-width: 80px;
    font-size: 15px;
    padding: 10px 20px;
    border-radius: 25px;
    background: linear-gradient(to right, #C00000, #e00000);
    color: #fff;
    border: none;
    box-shadow: 0 2px 6px rgba(192, 0, 0, 0.2);
    transition: all 0.3s;
  }
  
  .search-btn:active {
    transform: scale(0.98);
    background: linear-gradient(to right, #a00000, #C00000);
  }
  
  .tabs {
    display: flex;
    border-bottom: 1px solid #e0c7c7;
    margin-bottom: 20px;
    position: relative;
  }
  
  .tab {
    flex: 1;
    text-align: center;
    padding: 12px 0;
    font-size: 15px;
    color: #666;
    position: relative;
    transition: all 0.3s;
  }
  
  .tab.active {
    color: #C00000;
    font-weight: bold;
  }
  
  .tab.active::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 25%;
    width: 50%;
    height: 3px;
    background: #C00000;
    border-radius: 3px 3px 0 0;
  }
  
  .search-results {
    min-height: 200px;
  }
  
  .question-item {
    background: #fff;
    padding: 18px;
    border-radius: 12px;
    margin-bottom: 15px;
    box-shadow: 0 3px 10px rgba(192, 0, 0, 0.05);
    border: 1px solid #f0e0e0;
    transition: transform 0.3s;
  }
  
  .question-item:active {
    transform: translateY(2px);
  }
  
  .question-title {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 10px;
    color: #333;
    line-height: 1.4;
  }
  
  .question-meta {
    display: flex;
    font-size: 13px;
    color: #a00000;
    margin-bottom: 12px;
    align-items: center;
  }
  
  .question-meta text {
    margin-right: 15px;
    display: flex;
    align-items: center;
  }
  
  .question-meta icon {
    margin-right: 3px;
  }
  
  .question-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }
  
  .tags-container {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 20px;
  }
  
  .tag {
    padding: 6px 14px;
    background: linear-gradient(135deg, #f8e0e0, #f0c0c0);
    border-radius: 18px;
    font-size: 13px;
    color: #900000;
    border: 1px solid #e0a0a0;
    transition: all 0.3s;
  }
  
  .tag.active {
    background: linear-gradient(135deg, #f0c0c0, #C00000);
    color: white;
    font-weight: bold;
    box-shadow: 0 2px 5px rgba(192, 0, 0, 0.2);
  }
  
  .tag .count {
    margin-left: 5px;
    color: inherit;
    opacity: 0.8;
  }
  
  .section-title {
    font-size: 17px;
    font-weight: bold;
    margin: 20px 0 15px;
    color: #C00000;
    position: relative;
    padding-left: 12px;
  }
  
  .section-title::before {
    content: '';
    position: absolute;
    left: 0;
    top: 5px;
    bottom: 5px;
    width: 4px;
    background: #C00000;
    border-radius: 2px;
  }
  
  .loading,
  .empty {
    text-align: center;
    padding: 30px;
    color: #a00000;
    font-size: 15px;
  }
  
  .empty icon {
    display: block;
    font-size: 50px;
    margin-bottom: 15px;
    color: #e0a0a0;
  }