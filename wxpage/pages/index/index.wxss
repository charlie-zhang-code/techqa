/* 整体容器 */
.container {
    background-color: #f6f6f6;
    min-height: 100vh;
  }
  
  /* 搜索栏样式 */
  .search-bar {
    display: flex;
    align-items: center;
    background-color: #ffffff;
    border-radius: 30rpx;
    padding: 16rpx 24rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  }
  
  .search-bar icon {
    margin-right: 12rpx;
  }
  
  .search-text {
    font-size: 28rpx;
    color: #999;
  }
  
  /* 轮播图样式 */
  .banner {
    height: 300rpx;
    border-radius: 16rpx;
    overflow: hidden;
    margin-bottom: 30rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  }
  
  .banner-image {
    width: 100%;
    height: 100%;
  }
  
  /* 区块样式 */
  .section {
    margin-bottom: 30rpx;
    background-color: #ffffff;
    border-radius: 16rpx;
    padding: 24rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  }
  
  /* 区块标题 */
  .section-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 24rpx;
    position: relative;
    padding-left: 20rpx;
  }
  
  .section-title::before {
    content: '';
    position: absolute;
    left: 0;
    top: 10rpx;
    height: 32rpx;
    width: 8rpx;
    background-color: #4a90e2;
    border-radius: 4rpx;
  }
  
  /* 标签样式 */
  .tags {
    display: flex;
    flex-wrap: wrap;
  }
  
  .tag {
    font-size: 26rpx;
    color: #4a90e2;
    background-color: #e8f3fc;
    padding: 12rpx 24rpx;
    border-radius: 30rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
  }
  
  /* 标签切换容器 */
  .tab-container {
    display: flex;
    margin-bottom: 20rpx;
    background-color: #ffffff;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  }
  
  .tab {
    flex: 1;
    text-align: center;
    padding: 24rpx 0;
    font-size: 30rpx;
    color: #666;
  }
  
  .tab.active {
    color: #4a90e2;
    font-weight: bold;
    position: relative;
  }
  
  .tab.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60rpx;
    height: 6rpx;
    background-color: #4a90e2;
    border-radius: 3rpx;
  }
  
  /* 问题卡片样式 */
  .question-card {
    padding: 24rpx 0;
    border-bottom: 1rpx solid #eee;
  }
  
  .question-card:last-child {
    border-bottom: none;
  }
  
  .question-title {
    font-size: 32rpx;
    color: #333;
    margin-bottom: 16rpx;
    line-height: 1.4;
  }
  
  .question-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 24rpx;
    color: #999;
  }
  
  .question-metaq {
    display: flex;
    align-items: center;
  }
  
  .avatar-con {
    display: flex;
    align-items: center;
    margin-right: 16rpx;
  }
  
  .avatar {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    margin-right: 10rpx;
  }
  
  .username {
    font-size: 24rpx;
  }
  
  .question-tags {
    margin-top: 16rpx;
    display: flex;
    flex-wrap: wrap;
  }
  
  .question-tags .tag {
    font-size: 24rpx;
    padding: 8rpx 16rpx;
    margin-right: 12rpx;
    margin-bottom: 12rpx;
  }
  
  /* 加载状态样式 */
  .loading, .no-more, .empty, .error {
    text-align: center;
    padding: 30rpx 0;
    font-size: 28rpx;
    color: #999;
  }
  
  .error {
    color: #ff4d4f;
  }