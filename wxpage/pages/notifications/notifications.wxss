/* pages/notifications/notifications.wxss */
.container {
    background-color: #f9f5f5;
    height: 100vh;
    padding: 15px;
}

.action-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 16px;
    background: #fff;
    border-radius: 10px;
    margin-bottom: 15px;
    box-shadow: 0 2px 8px rgba(192, 0, 0, 0.05);
    border: 1px solid #f0f0f0;
}

.action-bar button {
    margin: 0;
    background: #ffe6e6;
    color: #C00000;
    border: none;
    border-radius: 6px;
    font-size: 14px;
    padding: 6px 12px;
}

.action-bar button:active {
    background: #ffcccc;
}

.notification-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.notification-item {
    position: relative;
    background: #fff;
    padding: 16px;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(192, 0, 0, 0.05);
    border-left: 3px solid #fff;
    transition: all 0.3s;
}

.notification-item.unread {
    background: #fff9f9;
    border-left-color: #C00000;
}

.notification-item:active {
    transform: scale(0.98);
}

.notification-type {
    font-size: 15px;
    font-weight: bold;
    margin-bottom: 8px;
    color: #C00000;
    display: flex;
    align-items: center;
}

.notification-type::before {
    content: "";
    display: inline-block;
    width: 16px;
    height: 16px;
    margin-right: 8px;
    background-size: contain;
    background-repeat: no-repeat;
}

.notification-type.reply::before {
    background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23C00000"><path d="M10 9V5l-7 7 7 7v-4.1c5 0 8.5 1.6 11 5.1-1-5-4-10-11-11z"/></svg>');
}

.notification-type.like::before {
    background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23C00000"><path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/></svg>');
}

.notification-content {
    font-size: 14px;
    line-height: 1.6;
    color: #666;
    margin-bottom: 8px;
    padding-left: 24px;
}

.notification-content .actor {
    color: #C00000;
    font-weight: 500;
    margin-right: 5px;
}

.notification-time {
    font-size: 12px;
    color: #8C0000;
    padding-left: 24px;
}

.unread-dot {
    position: absolute;
    top: 16px;
    right: 16px;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #C00000;
    box-shadow: 0 0 0 2px #ffe6e6;
}

.loading,
.empty {
    text-align: center;
    padding: 30px 20px;
    color: #8C0000;
    font-size: 14px;
}

.empty::before {
    content: "";
    display: block;
    width: 60px;
    height: 60px;
    margin: 0 auto 15px;
    background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%238C0000"><path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10zm0-2a8 8 0 1 1 0-16 8 8 0 0 1 0 16zm-1-5h2v2h-2v-2zm0-8h2v6h-2V7z"/></svg>') no-repeat center;
    opacity: 0.6;
}