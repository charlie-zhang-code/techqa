/* 整体容器 */
.container {
    background-color: #f6f6f6;
    min-height: 100vh;
}

/* 顶部操作栏 */
.action-bar {
    display: flex;
    width: 100vw;
    justify-content: space-between;
    align-items: center;
    background-color: #ffffff;
    border-radius: 16rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.action-bar text {
    flex: 1 1 0%;
    padding: 20rpx;
}
.action-bar button {
    margin-right: 20rpx;
    width: 240rpx;
    font-size: 32rpx;
    border-radius: 45rpx;
    background-color: #4a90e2;
    box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
    font-weight: 500;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    font-size: 24rpx;
}

.action-bar text {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
    height: 60rpx;
    line-height: 60rpx;
}

.action-bar button[disabled] {
    background-color: #cccccc;
    color: #ffffff;
}

/* 通知列表 */
.notification-list {
    width: 100%;
}

/* 单个通知项 */
.notification-item {
    display: flex;
    flex-direction: column;
    padding: 30rpx;
    background-color: #ffffff;
    border-radius: 16rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
    position: relative;
}

/* 未读通知的样式 */
.notification-item.unread {
    background-color: #f0f7ff;
    /* 浅蓝色背景表示未读 */
}

/* 未读标记点 */
.unread-dot {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    width: 16rpx;
    height: 16rpx;
    background-color: #4a90e2;
    border-radius: 50%;
}

/* 通知类型 */
.notification-type {
    font-size: 24rpx;
    color: #4a90e2;
    margin-bottom: 10rpx;
    padding: 4rpx 12rpx;
    background-color: #e8f3fc;
    border-radius: 20rpx;
    display: inline-block;
}

/* 通知内容 */
.notification-content {
    margin-bottom: 16rpx;
    line-height: 1.5;
}

.notification-content .actor {
    font-weight: bold;
    color: #333;
    margin-right: 10rpx;
}

.notification-content text {
    font-size: 30rpx;
    color: #333;
}

/* 通知时间 */
.notification-time {
    font-size: 24rpx;
    color: #999;
    text-align: right;
}

/* 加载状态 */
.loading,
.empty {
    text-align: center;
    padding: 40rpx 0;
    font-size: 28rpx;
    color: #999;
}

.empty {
    color: #ccc;
}