/* pages/ask/ask.wxss */
.container {
    padding: 15px;
    background-color: #f9f5f5;
    height: 100vh;
}

.form-item {
    margin-bottom: 20px;
}

.form-item input,
.form-item textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #e0c7c7;
    /* 浅红色边框 */
    border-radius: 4px;
    margin-bottom: 10px;
    background-color: #fff;
    transition: border-color 0.3s;
}

.form-item input:focus,
.form-item textarea:focus {
    border-color: #C00000;
    /* 聚焦时使用主色 */
    outline: none;
}

.form-item textarea {
    min-height: 150px;
}

.picker {
    padding: 10px;
    border: 1px solid #e0c7c7;
    border-radius: 4px;
    margin-bottom: 10px;
    background-color: #fff;
}

.tags-container {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 10px;
}

.tag {
    display: flex;
    align-items: center;
    padding: 4px 10px;
    background: linear-gradient(135deg, #f8e0e0, #f0c0c0);
    /* 红色渐变背景 */
    border-radius: 15px;
    font-size: 12px;
    color: #900000;
    /* 深红色文字 */
    border: 1px solid #e0a0a0;
}

.tag.active {
    background: linear-gradient(135deg, #f0c0c0, #C00000);
    /* 选中状态使用更强烈的红色渐变 */
    color: white;
    font-weight: bold;
}

switch {
    margin-right: 10px;
}

button {
    margin-top: 20px;
    background: linear-gradient(to right, #C00000, #e00000);
    /* 红色渐变按钮 */
    color: white;
    border: none;
    border-radius: 25px;
    padding: 12px 24px;
    font-weight: bold;
    box-shadow: 0 2px 6px rgba(192, 0, 0, 0.2);
    transition: all 0.3s;
}

button:hover {
    background: linear-gradient(to right, #a00000, #C00000);
    /* 悬停时加深红色 */
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(192, 0, 0, 0.3);
}

button:active {
    transform: translateY(0);
    box-shadow: 0 2px 4px rgba(192, 0, 0, 0.2);
}