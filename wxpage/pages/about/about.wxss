/* pages/about/about.wxss */

/* 整体容器 */
.container {
    padding-top: 40rpx;
    background-color: #f6f6f6;
    min-height: 100vh;
  }
  
  /* 顶部标题 */
  .header {
    margin-bottom: 40rpx;
    text-align: center;
  }
  
  .title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
    display: block;
  }
  
  /* 应用信息卡片 */
  .card {
    background-color: #ffffff;
    border-radius: 20rpx;
    padding: 40rpx 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 40rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  }
  
  .logo {
    width: 160rpx;
    height: 160rpx;
    margin-bottom: 30rpx;
  }
  
  .app-name {
    font-size: 48rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
    display: block;
  }
  
  .version {
    font-size: 26rpx;
    color: #999;
    margin-bottom: 16rpx;
    display: block;
  }
  
  .slogan {
    font-size: 30rpx;
    color: #666;
    display: block;
  }
  
  /* 章节样式 */
  .section {
    background-color: #ffffff;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  }
  
  .section-title {
    font-size: 34rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 30rpx;
    padding-bottom: 16rpx;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  /* 功能介绍项 */
  .feature-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 24rpx;
    padding-bottom: 24rpx;
    border-bottom: 1rpx dashed #f0f0f0;
  }
  
  .feature-item:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
  }
  
  .feature-item icon {
    margin-right: 20rpx;
    flex-shrink: 0;
  }
  
  .feature-item text {
    font-size: 30rpx;
    color: #333;
    line-height: 1.5;
  }
  
  /* 信息项 */
  .info-item {
    display: flex;
    margin-bottom: 16rpx;
    font-size: 30rpx;
    line-height: 1.5;
  }
  
  .info-label {
    color: #666;
    width: 180rpx;
    flex-shrink: 0;
  }
  
  .info-value {
    color: #333;
    flex: 1;
  }
  
  /* 页脚 */
  .footer {
    text-align: center;
    font-size: 24rpx;
    color: #999;
    padding: 30rpx 0;
  }
  
  .footer text {
    display: block;
    margin-bottom: 8rpx;
  }