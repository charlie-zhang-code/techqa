/* pages/about/about.wxss */
.container {
    padding: 20px;
    min-height: 100vh;
    background-color: #f8f8f8;
    display: flex;
    flex-direction: column;
}

.header {
    margin-bottom: 20px;
}

.title {
    font-size: 20px;
    font-weight: bold;
    color: #C00000;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding-bottom: 10px;
    border-bottom: 1px solid #f0f0f0;
}

.card {
    background-color: #fff;
    border-radius: 10px;
    padding: 20px;
    margin-bottom: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-shadow: 0 2px 8px rgba(192, 0, 0, 0.08);
    border: 1px solid #ffe6e6;
}

.logo {
    width: 80px;
    height: 80px;
    margin-bottom: 15px;
    border-radius: 50%;
    border: 2px solid #ffe6e6;
}

.app-name {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 5px;
    color: #C00000;
}

.version {
    font-size: 14px;
    color: #8C0000;
    margin-bottom: 10px;
}

.slogan {
    font-size: 14px;
    color: #C00000;
    font-style: italic;
}

.section {
    background-color: #fff;
    border-radius: 10px;
    padding: 15px;
    margin-bottom: 20px;
    box-shadow: 0 2px 8px rgba(192, 0, 0, 0.08);
    border: 1px solid #f0f0f0;
}

.section-title {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 15px;
    color: #C00000;
    border-left: 4px solid #C00000;
    padding-left: 10px;
}

.feature-item {
    display: flex;
    align-items: center;
    margin-bottom: 12px;
    font-size: 14px;
    color: #666;
}

.feature-item icon {
    margin-right: 10px;
    color: #C00000;
}

.info-item {
    display: flex;
    margin-bottom: 10px;
    font-size: 14px;
}

.info-label {
    color: #8C0000;
    width: 80px;
    font-weight: 500;
}

.info-value {
    color: #333;
    flex: 1;
}

.footer {
    margin-top: auto;
    text-align: center;
    padding: 20px 0;
    font-size: 12px;
    color: #999;
    display: flex;
    flex-direction: column;
    border-top: 1px solid #f0f0f0;
}

.footer text:first-child {
    color: #C00000;
    margin-bottom: 5px;
}